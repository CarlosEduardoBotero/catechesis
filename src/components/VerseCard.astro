---
import TextWithLineBreaks from "./TextWithLineBreaks.astro";

const { title, book, chapter, verse, content, subtitle } = Astro.props;
---

<div class="border border-gray-200 p-4 rounded-md shadow bg-white max-w-[70ch]">
  <h2 class="text-2xl font-semibold text-gray-700 mb-3">{title}</h2>
  {
    subtitle && (
      <h3 class="text-xl font-semibold text-gray-600 mb-6">
        <TextWithLineBreaks text={subtitle} />
      </h3>
    )
  }
  {
    book && (
      <p class="font-bold text-lg">
        {book}
        {chapter}:{verse}
      </p>
    )
  }
  <p class="text-lg font-semibold text-gray-700">
    {content}
  </p>
</div>
