---
import Layout from "../../layouts/Layout.astro";

import { getLangFromUrl, useTranslations } from "../../i18n/utils";
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<Layout title={t("who-we-are.title")} description={t("home.meta.description")}>
  <section
    id="who-we-are"
    class="mx-4 my-4 flex flex-col gap-8 text-xl text-gray-600 sm:mx-12 md:mx-28"
  >
    <h1 class="text-5xl text-gray-800">{t("who-we-are.title")}</h1>
    <p>
      <span class="font-bold">{t("who-we-are.weBeliveGod")}</span>
      {t("who-we-are.thisPurposeWasDesign")}
    </p>
    <p>
      {t("who-we-are.GodWantsAFamily")}
    </p>
    <p>
      <span class="font-bold">{t("who-we-are.aFamilyMeansUnity")}</span>
      {t("who-we-are.thisIsAnIndispensableRequirement")}<sup>1</sup>.
    </p>
    <p>
      <span class="font-bold">{t("who-we-are.ofManyChildren")}</span>
      {t("who-we-are.disciplesThatMakeMoreDisciples")}<sup>2</sup>. {
        t("who-we-are.whereThereIsNatural")
      }
    </p>
    <p>
      <span class="font-bold"
        >{t("who-we-are.inJesusLikenessMeansEdification")}</span
      >
      {t("who-we-are.godHasNoContentmentInQuantity")}<sup>3</sup>. {
        t("who-we-are.wivesThatDoNotSubmit")
      }<sup>4</sup>. {t("who-we-are.singlesThatDoNotSeek")}<sup>5</sup>.
      {t("who-we-are.childrenThatDoNotObey")}<sup>6</sup>.
    </p>
    <p>{t("who-we-are.weSeekAFamilyRelationship")}<sup>7</sup>.</p>
    <blockquote class="italic px-6">
      {t("who-we-are.untilWeAllAttain")}
    </blockquote>
    <p class="font-bold">{t("who-we-are.thatIsWhatWeBelieve")}</p>
    <div>
      {t("who-we-are.references")}:<ul>
        <li>
          <sup>1</sup>{t("who-we-are.firstReference")}
        </li>
        <li><sup>2</sup>{t("who-we-are.secondReference")}</li>
        <li><sup>3</sup>{t("who-we-are.thirdReference")}</li>
        <li><sup>4</sup>{t("who-we-are.fourthReference")}</li>
        <li><sup>5</sup>{t("who-we-are.fifthReference")}</li>
        <li><sup>6</sup>{t("who-we-are.sixthReference")}</li>
        <li><sup>7</sup>{t("who-we-are.seventhReference")}</li>
      </ul>
    </div>
  </section>
</Layout>
