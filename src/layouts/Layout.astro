---
import { getLangFromUrl } from "../i18n/utils";
import Header from "../components/Header.astro";
import Drawer from "../components/Drawer.astro";
import clsx from "clsx";
import "../styles/global.css";

const lang = getLangFromUrl(Astro.url);
const { title, noFullPage, description, keywords } = Astro.props;
---

<html lang={lang}>
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon-16x16.png" />
    <link rel="icon" type="image/svg+xml" href="/favicon-32x32.png" />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <meta name="viewport" content="width=device-width" />
    <meta name="author" content="Carlos Eduardo Botero Viloria" />
    <meta name="description" content={description} />
    <meta name="keywords" content={keywords} />
    <title>{title}</title>
  </head>
  <body class="bg-slate-100 text-gray-800 min-h-screen-svh flex flex-col">
    <Header />
    <main
      class={clsx("p-4 max-w-[1440px] w-full mx-auto", {
        "flex-1 flex": !Boolean(noFullPage),
      })}
    >
      <slot />
    </main>
    <Drawer />
  </body>
</html>
