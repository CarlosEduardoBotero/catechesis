---
import Layout from "../layouts/Layout.astro";

import {
  getLangFromUrl,
  useTranslatedPath,
  useTranslations,
} from "../i18n/utils";
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const translatePath = useTranslatedPath(lang);
---

<Layout title="404" description={t("404.meta.description")}>
  <section id="404" class="mx-auto">
    <div class="container">
      <div class="text-center mb-8">
        <h2 class="text-3xl md:text-4xl font-bold mb-4">404</h2>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          {t("404.weCouldntFindThePageYouWereLookingFor")}
        </p>
      </div>
      <div>
        <div class="flex flex-col">
          <div class="flex items-center justify-center">
            <div class="relative inline-block text-left">
              <span class="rounded-md">
                <a
                  aria-label={t("nav.whoWeAre")}
                  class={"bg-emerald-500 inline-flex justify-center w-full px-4 py-2 text-xl font-medium text-white leading-5 transition duration-150 ease-in-out rounded-md hover:bg-emerald-600 focus:outline-none focus:border-blue-300 active:bg-emerald-500 active:text-gray-100"}
                  href={translatePath("/")}>{t("404.goBackHome")}</a
                >
              </span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>
